<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigations.Paginas.Page3"
             Title="App CITAS">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="30">
        
        <Label Text="Cita reservada" FontSize="40" TextColor="Fuchsia" HorizontalOptions="Center"/>
        
        <Label Text="Dia" VerticalOptions="Center"/>
        <Entry x:Name="EntryDia" IsEnabled="False"/>

        <Label Text="Especialidad" VerticalOptions="Center"/>
        <Entry x:Name="EntryEspecialidad" IsEnabled="False"/>

        <Label Text="Medico" VerticalOptions="Center"/>
        <Entry x:Name="EntryMedico" IsEnabled="False"/>

        <Button Text="Aceptar" Clicked="Button_Clicked" TextColor="White" BackgroundColor="Fuchsia"/>
        <Button Text="Cancelar Cita" Clicked="Button_Clicked_1" TextColor="White" BackgroundColor="Gray"/>
        
    </VerticalStackLayout>
</ContentPage>